server  {

    listen 80;
    server_name handwriter.in;
    access_log  /var/log/nginx/handwriter.log;

    location /static/ (
        root /home/ubuntu/TheHandwriter/static;
    )

    location / {
        proxy_pass http://localhost:8000;
        proxy_set_header Host $host;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
    }
}